{
  "name": "acme",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "typescript": "5.9.3",
      "wrangler": "4.53.0"
    }
  },
  "scripts": {
    "db:generate": "bun run --filter @acme/db generate",
    "db:migrate": "bun run --filter @acme/db migrate",
    "db:push": "bun run --filter @acme/db push",
    "db:studio": "bun run --filter @acme/db studio",
    "dev": "bun run --workspaces --if-present dev",
    "generate-types": "bun run --workspaces --if-present generate-types",
    "lint": "biome check",
    "setup": "./scripts/setup.sh",
    "test": "bun run --workspaces test",
    "typecheck": "bun run --workspaces typecheck"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "lefthook": "2.0.9"
  },
  "packageManager": "bun@1.3.4"
}
